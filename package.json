{
  "name": "eslint-nodejs",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run serve",
    "serve": "npm run build-ts && node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "lint": "echo \"Success: no lint configuration\" && exit 0" ,
    "test": "echo \"Success: no test specified\" && exit 0",
    "watch": "npm run build-ts && concurrently 'npm:watch-ts' 'npm:watch-node'"
  },
  "husky": {
    "hooks": {
       "pre-commit": "export CI=true && npm run build-ts && lint-staged && npm test",
       "pre-push": "export CI=true && npm run build-ts && lint-staged && npm test"
    }
  },
  "lint-staged": {
     "*.ts": ["echo \"Success: no lint configuration\" && exit 0"]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  }
}
